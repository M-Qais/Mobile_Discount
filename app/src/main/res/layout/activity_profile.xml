    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:src="@drawable/up_up"

        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile Image"
        android:id="@+id/change_picture_tv"
        android:layout_below="@id/profile_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:id="@+id/name_profiles"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textColorHint="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:layout_below="@id/change_picture_tv"
        android:layout_marginTop="100dp"/>
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/done_p_image"
      android:layout_below="@id/name_profiles"
      android:layout_marginTop="100dp"
      android:text="Done"
      android:background="#3333FF"/>


</RelativeLayout>